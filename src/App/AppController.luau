	local initialCurrency = self.currencyService:getPlayerCurrency(player)
	
	self:setState({ 
		coins = initialCurrency.coins,
		isLoaded = true,
		showShop = false, -- –º–∞–≥–∞–∑–∏–Ω —Å–∫—Ä—ã—Ç –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
		shopAnimating = false, -- —Ñ–ª–∞–≥ –∞–Ω–∏–º–∞—Ü–∏–∏
