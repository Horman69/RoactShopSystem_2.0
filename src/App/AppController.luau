-- –ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –º–∞–≥–∞–∑–∏–Ω–∞ —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π
function AppController:toggleShop()
	-- –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–∞–µ–º –º–Ω–æ–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã–µ –Ω–∞–∂–∞—Ç–∏—è –≤–æ –≤—Ä–µ–º—è –∞–Ω–∏–º–∞—Ü–∏–∏
	if self.state.shopAnimating then
		return
	end
	
	-- –í–æ—Å–ø—Ä–æ–∏–∑–≤–æ–¥–∏–º –∑–≤—É–∫ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –º–∞–≥–∞–∑–∏–Ω–∞
	self.soundService:playShopToggleSound()
	
	local isOpening = not self.state.showShop
	
	if isOpening then
		-- –û–¢–ö–†–´–¢–ò–ï –ú–ê–ì–ê–ó–ò–ù–ê (–°–õ–ï–í–ê)
		self:setState({
			showShop = true,
			shopAnimating = true
		})
		
		-- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è —Å–ª–µ–≤–∞
		spawn(function()
			wait(0.05) -- –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è —Ä–µ–Ω–¥–µ—Ä–∞
			local shopFrame = self.shopRef:getValue()
			if shopFrame then
				-- –ù–∞—á–∞–ª—å–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è - –∑–∞ —ç–∫—Ä–∞–Ω–æ–º —Å–ª–µ–≤–∞
				shopFrame.Position = UDim2.new(0, -400, 0, 0)
				
				-- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫–æ–ª—å–∂–µ–Ω–∏—è –∫ —Ñ–∏–Ω–∞–ª—å–Ω–æ–π –ø–æ–∑–∏—Ü–∏–∏
				local tween = TweenService:Create(shopFrame,
					TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out),
					{Position = UDim2.new(0, 0, 0, 0)} -- –§–∏–Ω–∞–ª—å–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è —Å–ª–µ–≤–∞
				)
				
				tween.Completed:Connect(function()
					self:setState({shopAnimating = false})
				end)
				
				tween:Play()
			else
				self:setState({shopAnimating = false})
			end
		end)
	else
		-- –ó–ê–ö–†–´–¢–ò–ï –ú–ê–ì–ê–ó–ò–ù–ê (–í–õ–ï–í–û)
		self:setState({
			shopAnimating = true
		})
		
		-- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫—Ä—ã—Ç–∏—è –≤–ª–µ–≤–æ
		spawn(function()
			local shopFrame = self.shopRef:getValue()
			if shopFrame then
				-- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫–æ–ª—å–∂–µ–Ω–∏—è –∑–∞ —ç–∫—Ä–∞–Ω —Å–ª–µ–≤–∞
				local tween = TweenService:Create(shopFrame,
					TweenInfo.new(0.25, Enum.EasingStyle.Quart, Enum.EasingDirection.In),
					{Position = UDim2.new(0, -400, 0, 0)} -- –°–∫—Ä—ã–≤–∞–µ–º –∑–∞ –ª–µ–≤—ã–º –∫—Ä–∞–µ–º
				)
				
				tween.Completed:Connect(function()
					self:setState({
						showShop = false,
						shopAnimating = false
					})
				end)
				
				tween:Play()
			else
				self:setState({
					showShop = false,
					shopAnimating = false
				})
			end
		end)
	end
end

-- –§—É–Ω–∫—Ü–∏—è –≤—ã–∑—ã–≤–∞–µ—Ç—Å—è –ø–æ—Å–ª–µ –ø–æ–∫—É–ø–∫–∏ —Ç–æ–≤–∞—Ä–∞
function AppController:onPurchase(product: Product)
	-- –ü–æ–∫—É–ø–∞–µ–º —Ç–æ–≤–∞—Ä —á–µ—Ä–µ–∑ —Å–µ—Ä–≤–∏—Å
	local result = self.shopService:purchaseProduct(player, product.id)
	
	if result.success then
		print("‚úÖ –£—Å–ø–µ—à–Ω–∞—è –ø–æ–∫—É–ø–∫–∞:", result.message)
		
		-- –í–æ—Å–ø—Ä–æ–∏–∑–≤–æ–¥–∏–º –∑–≤—É–∫ —É—Å–ø–µ—à–Ω–æ–π –ø–æ–∫—É–ø–∫–∏
		self.soundService:playPurchaseSound()
		
		-- –û–±–Ω–æ–≤–ª—è–µ–º –ø–∞–Ω–µ–ª—å —Å–ø–æ—Å–æ–±–Ω–æ—Å—Ç–µ–π –ø–æ—Å–ª–µ –ø–æ–∫—É–ø–∫–∏
		if product.category == "ability" then
			-- –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –æ–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ
			self:setState({
				coins = result.remainingCoins or self.state.coins,
				abilityUpdateTrigger = (self.state.abilityUpdateTrigger or 0) + 1, -- –¢—Ä–∏–≥–≥–µ—Ä –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø–∞–Ω–µ–ª–∏
				shopUpdateTrigger = (self.state.shopUpdateTrigger or 0) + 1, -- –¢—Ä–∏–≥–≥–µ—Ä –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –º–∞–≥–∞–∑–∏–Ω–∞
			})
		end
		
		-- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—Ö–µ
		game.StarterGui:SetCore("SendNotification", {
			Title = "–ü–æ–∫—É–ø–∫–∞ —É—Å–ø–µ—à–Ω–∞!",
			Text = "–ö—É–ø–ª–µ–Ω —Ç–æ–≤–∞—Ä: " .. product.name,
			Duration = 3,
		})
	else
		warn("‚ùå –û—à–∏–±–∫–∞ –ø–æ–∫—É–ø–∫–∏:", result.message)
		
		-- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ
		game.StarterGui:SetCore("SendNotification", {
			Title = "–û—à–∏–±–∫–∞ –ø–æ–∫—É–ø–∫–∏",
			Text = result.message,
			Duration = 4,
		})
	end
end

