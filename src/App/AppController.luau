function AppController:toggleShop()
	-- –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–∞–µ–º –º–Ω–æ–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã–µ –Ω–∞–∂–∞—Ç–∏—è –≤–æ –≤—Ä–µ–º—è –∞–Ω–∏–º–∞—Ü–∏–∏
	if self.state.shopAnimating then
		return
	end
	
	-- –ó–≤—É–∫ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –º–∞–≥–∞–∑–∏–Ω–∞
	self.soundService:playClickSound()
	
	local isOpening = not self.state.showShop
	
	if isOpening then
		-- –û–¢–ö–†–´–¢–ò–ï –ú–ê–ì–ê–ó–ò–ù–ê (–°–õ–ï–í–ê)
		self:setState({
			showShop = true,
			shopAnimating = true
		})
		
		-- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è —Å–ª–µ–≤–∞
		spawn(function()
			wait(0.05) -- –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è —Ä–µ–Ω–¥–µ—Ä–∞
			local shopFrame = self.shopRef:getValue()
			if shopFrame then
				-- –ù–∞—á–∞–ª—å–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è - –∑–∞ —ç–∫—Ä–∞–Ω–æ–º —Å–ª–µ–≤–∞ (–∞–¥–∞–ø—Ç–∏–≤–Ω–∞—è)
				local startPosition = self.platformService:isMobile() and 
					UDim2.new(-0.9, 0, 0.1, 0) or -- –ú–æ–±–∏–ª—å–Ω–∞—è: -90% —à–∏—Ä–∏–Ω—ã, 10% –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
					UDim2.new(0, -480, 0, 80) -- –î–µ—Å–∫—Ç–æ–ø–Ω–∞—è: -480px, 80px –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
				
				shopFrame.Position = startPosition
				
				-- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫–æ–ª—å–∂–µ–Ω–∏—è –∫ —Ñ–∏–Ω–∞–ª—å–Ω–æ–π –ø–æ–∑–∏—Ü–∏–∏
				local finalPosition = self.platformService:isMobile() and 
					UDim2.new(0, 0, 0.1, 0) or -- –ú–æ–±–∏–ª—å–Ω–∞—è: –ª–µ–≤—ã–π –∫—Ä–∞–π, 10% –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
					UDim2.new(0, 0, 0, 80) -- –î–µ—Å–∫—Ç–æ–ø–Ω–∞—è: –ª–µ–≤—ã–π –∫—Ä–∞–π, 80px –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
				
				local tween = TweenService:Create(shopFrame,
					TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out),
					{Position = finalPosition}
				)
				
				tween.Completed:Connect(function()
					self:setState({shopAnimating = false})
				end)
				
				tween:Play()
			else
				self:setState({shopAnimating = false})
			end
		end)
	else
		-- –ó–ê–ö–†–´–¢–ò–ï –ú–ê–ì–ê–ó–ò–ù–ê (–í–õ–ï–í–û)
		self:setState({
			shopAnimating = true
		})
		
		-- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫—Ä—ã—Ç–∏—è –≤–ª–µ–≤–æ
		spawn(function()
			local shopFrame = self.shopRef:getValue()
			if shopFrame then
				-- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫–æ–ª—å–∂–µ–Ω–∏—è –∑–∞ —ç–∫—Ä–∞–Ω —Å–ª–µ–≤–∞
				local hidePosition = self.platformService:isMobile() and 
					UDim2.new(-0.9, 0, 0.1, 0) or -- –ú–æ–±–∏–ª—å–Ω–∞—è: –∑–∞ —ç–∫—Ä–∞–Ω —Å–ª–µ–≤–∞, —Å–æ—Ö—Ä–∞–Ω—è–µ–º –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
					UDim2.new(0, -480, 0, 80) -- –î–µ—Å–∫—Ç–æ–ø–Ω–∞—è: –∑–∞ —ç–∫—Ä–∞–Ω —Å–ª–µ–≤–∞, —Å–æ—Ö—Ä–∞–Ω—è–µ–º –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
				
				local tween = TweenService:Create(shopFrame,
					TweenInfo.new(0.25, Enum.EasingStyle.Quart, Enum.EasingDirection.In),
					{Position = hidePosition}
				)
				
				tween.Completed:Connect(function()
					self:setState({
						showShop = false,
						shopAnimating = false
					})
				end)
				
				tween:Play()
			else
				self:setState({
					showShop = false,
					shopAnimating = false
				})
			end
		end)
	end
end

